<% include ./layout %>
<div class="ui two column centered grid">
  <div class = "column">
    <h1>검색하기</h1>
    <form id="form_search" method="GET" action="/show/orSearch" style="width:120px;">
      <div class = "col-xs-5 col-md-2">
        <div class="ui category search">
          <div class="ui icon input"  style = "width:150px;">
            <input id="id_keyword" name="searchkeyword" class="prompt" type="search" placeholder="검색해요" >
            <% for (let user of users) {%>
              <p><%=user.id %></p>
              <% } %>
              <input type="date" name="startdate">
              <input type="date" name="enddate">
              <input id="id_keyword" name="searchkeyword2" class="prompt" type="search" placeholder="메모 검색">
       
            </div>
            <input type="submit" value="검색하기"> 
          </div>
        </div>
      </form>
      
      <h1>상품권 번호 보기</h1>
      
      count: <%=count %>
      user: <%=user %>
      
      <table class="ui celled table example" id = "pin_table">
        <thead>
          <tr>
            <th>등록자ID</th>
            <th>상품권ID</th>
            <th>금액</th>
            <th>핀번호1</th>
            <th>핀번호2/th>
              <th>주문 번호</th>
              <th>등록 날짜</th>
              <th>메모</th>
              <td>수정 삭제</td>
            </tr>
          </thead>
          <tbody>
            <% for (let pin of pins) {%>
              <tr>
                <td><%= pin.userId %></td>                 
                <td><%=pin.giftcardId %></td> 
                <td><%=pin.price %></td>
                <td><%=pin.pin_number %></td>
                <td><%=pin.pin_number2 %></td>
                <td><%=pin.orderedid %></td>
                <td><%=pin.updatedAt %></td>
                <td><%=pin.memo %></td>
                <td><button ><a href="/edit_pin/<%=pin.id%>">수정하기</a></button></td>
                <form action="/delete_pin/<%=pin.id%>?_method=DELETE" method="post">
                  <td><input type="submit" value="삭제하기"></input></td>
                </form>
              </tr>
              <% } %>
            </tbody>
          </table>
          <!-- http://localhost:3000/show/orSearch?searchkeyword=&startdate=&enddate=&searchkeyword2=dk -->
          <nav>
            
            <div class="ui pagination menu">
              <% for (let i=1; i<= pages ; i++) { %>
                <% if (title=="검색") { %>
                  
                  <a class="item" href="./orSearch?searchkeyword=<%=searchWord%>&startdate=<%=startDate%>&enddate=<%=endDate%>&searchkeyword2=<%=searchWord2%>&page=<%=i%>"><%=i%></a>
                  <% } else { %>
                    <a class="item" href="./<%=i%>"><%=i%></a>
                    <% } %>
                    <% } %>                  
                  </div>
                  
                </nav>
                
              </body>      
              </html>
